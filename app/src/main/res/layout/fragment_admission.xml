<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragment.AdmissionFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <TextView
                android:id="@+id/text0"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:background="@mipmap/titlebg"
                android:textColor="@color/colorWhite"
                android:textSize="24sp"
                android:paddingLeft="15dp"
                android:paddingTop="10dp"
                android:paddingRight="15dp"
                android:textStyle="bold"
                android:text="ADMISSION REQUIERMENTS"/>

            <TextView
                android:id="@+id/text1"
                android:layout_below="@+id/text0"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="Eligibility"
                android:textStyle="bold"
                android:textColor="@color/colorOrange"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/text2"
                android:layout_below="@+id/text1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="20dp"
                android:background="@color/colorGreyDark"
                android:textSize="15sp"
                android:gravity="left"
                android:padding="8dp"
                android:textColor="@color/colorWhite"
                android:text="@string/context1"></TextView>

            <TextView
                android:layout_below="@+id/text5"
                android:id="@+id/text6"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="English Language Proficiency Requirement"
                android:textColor="@color/colorOrange"
                android:textStyle="bold"
                android:textSize="20dp"></TextView>
            <TextView
                android:id="@+id/text7"
                android:layout_below="@+id/text6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="20dp"
                android:background="@color/colorGreyDark"
                android:textSize="15sp"
                android:gravity="left"
                android:padding="8dp"
                android:textColor="@color/colorWhite"
                android:text="@string/context2"></TextView>

            <Button
                android:id="@+id/online"
                android:layout_width="280dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/text8"
                android:layout_centerHorizontal="true"
                android:radius="15dip"
                android:layout_gravity="center"
                android:layout_marginTop="30dp"
                android:background="@drawable/btn_shape"
                android:text="ONLINE APPLICATION"
                android:textColor="@color/colorWhite"
                android:textSize="20dp"
                android:textStyle="bold" />
            <Button
                android:id="@+id/time"
                android:layout_width="280dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/online"
                android:layout_centerHorizontal="true"
                android:radius="15dip"
                android:layout_gravity="center"
                android:layout_marginTop="30dp"
                android:layout_marginBottom="15dp"
                android:background="@drawable/btn_shape"
                android:text="TIME TABLE"
                android:textColor="@color/colorWhite"
                android:textSize="20dp"
                android:textStyle="bold" />
        </LinearLayout>
    </ScrollView>
</FrameLayout>