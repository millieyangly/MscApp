<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/app"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@mipmap/titlebg"
        android:paddingLeft="15dp"
        android:paddingTop="10dp"
        android:paddingRight="15dp"
        android:text="Application Timetable"
        android:textColor="@color/colorWhite"
        android:textSize="24sp"
        android:textStyle="bold"
         />

    <TextView
        android:id="@+id/fee"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:text="@string/fee"
        android:textColor="@color/colorOrange"
        android:textSize="15dp" />

    <HorizontalScrollView
        android:id="@+id/hsv1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/fee"
        android:padding="15dp">

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:layout_editor_absoluteX="0dp"
            tools:layout_editor_absoluteY="43dp"
            tools:paddingTop="5dp">
            <!--第一行  在TableRow里面设置底色，然后在上面覆盖一层需要的图形或者文字，露出来的地方成为边框
        设置的底色为边框色-->
            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorOrange">

                <!--第一行第一列 -->
                <LinearLayout

                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:id="@+id/Re_butt1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="5dp"
                        android:layout_marginRight="5dp"
                        android:background="@android:color/background_light">
                        <!--第一行 第一列 文字-->
                        <TextView
                            android:id="@+id/textView1"
                            android:layout_width="wrap_content"
                            android:layout_height="50dp"
                            android:layout_centerHorizontal="true"
                            android:text="Application deadline"
                            android:textColor="@color/colorBlack"
                            android:textSize="15dp" />
                    </RelativeLayout>
                </LinearLayout>
                <!--第一行 第二列-->
                <LinearLayout

                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:id="@+id/Re_butt2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:layout_marginRight="5dp"
                        android:background="@android:color/background_light">

                        <TextView
                            android:id="@+id/textView2"
                            android:layout_width="wrap_content"
                            android:layout_height="50dp"
                            android:layout_centerHorizontal="true"
                            android:text="Main round:"
                            android:textColor="@color/colorBlack"
                            android:textSize="15dp" />
                    </RelativeLayout>
                </LinearLayout>

                <!--第一行 第三列-->
                <LinearLayout

                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:id="@+id/Re_butt3"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="5dp"
                        android:background="@android:color/background_light">

                        <TextView
                            android:id="@+id/textView3"
                            android:layout_width="wrap_content"
                            android:layout_height="50dp"
                            android:layout_centerHorizontal="true"
                            android:text="December 31, 2018"
                            android:textColor="@color/colorBlack"
                            android:textSize="15dp" />
                    </RelativeLayout>
                </LinearLayout>
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:background="@color/colorOrange">

                <!--第二行第一列-->
                <LinearLayout

                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:id="@+id/Re_butt4"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:layout_marginRight="5dp"
                        android:background="@android:color/background_light">

                        <TextView
                            android:id="@+id/textView4"
                            android:layout_width="wrap_content"
                            android:layout_height="50dp"
                            android:layout_centerHorizontal="true"
                            android:text="Application deadline"
                            android:textColor="@color/colorBlack"
                            android:textSize="15dp" />
                    </RelativeLayout>
                </LinearLayout>

                <!--第2行 第二列-->
                <LinearLayout

                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:id="@+id/Re_butt5"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="5dp"
                        android:layout_marginRight="5dp"
                        android:background="@android:color/background_light">
                        <!--第二行 第二列 文字-->
                        <TextView
                            android:id="@+id/textView5"
                            android:layout_width="wrap_content"
                            android:layout_height="50dp"
                            android:layout_centerHorizontal="true"
                            android:text="Clearing round:"
                            android:textColor="@color/colorBlack"
                            android:textSize="15dp" />
                    </RelativeLayout>
                </LinearLayout>

                <!--第2行 第三列-->
                <LinearLayout

                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:id="@+id/Re_butt6"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="5dp"
                        android:background="@android:color/background_light">

                        <TextView
                            android:id="@+id/textView6"
                            android:layout_width="wrap_content"
                            android:layout_height="50dp"
                            android:layout_centerHorizontal="true"
                            android:text="12:00nn (HKT), April 15, 2019"
                            android:textColor="@color/colorBlack"
                            android:textSize="15dp" />
                    </RelativeLayout>
                </LinearLayout>
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:background="@color/colorOrange">

                <!--第3行第一列-->
                <LinearLayout

                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:id="@+id/Re_butt7"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:layout_marginRight="5dp"
                        android:background="@android:color/background_light">

                        <TextView
                            android:id="@+id/textView7"
                            android:layout_width="wrap_content"
                            android:layout_height="50dp"
                            android:layout_centerHorizontal="true"
                            android:text="Class commencement"
                            android:textColor="@color/colorBlack"
                            android:textSize="15dp" />
                    </RelativeLayout>
                </LinearLayout>

                <!--第3行 第二列-->
                <LinearLayout

                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:id="@+id/Re_butt8"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="5dp"
                        android:layout_marginRight="5dp"
                        android:background="@android:color/background_light">
                        <!--第二行 第二列 文字-->
                        <TextView
                            android:id="@+id/textView8"
                            android:layout_width="wrap_content"
                            android:layout_height="50dp"
                            android:layout_centerHorizontal="true"
                            android:text="September 2019"
                            android:textColor="@color/colorBlack"
                            android:textSize="15dp" />
                    </RelativeLayout>
                </LinearLayout>

                <!--第3行 第三列-->
                <LinearLayout

                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:id="@+id/Re_butt9"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="5dp"
                        android:background="@android:color/background_light">

                        <TextView
                            android:id="@+id/textView9"
                            android:layout_width="wrap_content"
                            android:layout_height="50dp"
                            android:layout_centerHorizontal="true"
                            android:text=" "
                            android:textColor="@color/colorBlack"
                            android:textSize="15dp" />
                    </RelativeLayout>
                </LinearLayout>
            </TableRow>
        </TableLayout>
    </HorizontalScrollView>

</LinearLayout>